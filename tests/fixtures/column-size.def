object TexExporter
  Description = 'Persons data export'
  Sessions = <  
    item
      Name = 'persons'
      Pipeline = 'person-pipeline'      
      Columns = <      
        item
          Name = 'id'
          Expression = 'Result := ''010'';'          
          Size = 3          
        end
        item
          Name = 'firstName'          
          Size = 10          
        end
        item
          Name = 'lastName'
          Complete = #32
          Size = 5          
        end
        item
          Name = 'birthDate'          
          Size = 10          
        end
        item
          Name = 'salary'          
          Dictionary = 'money'          
        end
        item
          Name = 'active'          
          Dictionary = 'boolean'          
        end
        item
          Name = 'macro'              
          Expression = 'Result := EvaluateMacro(''[firstName] - [lastName]'');'
        end
        item
          Name = 'count'              
          Expression = 'Result := ExecSQLScalar(''select count(id) from invoices where id = :id'', [FindField(''id'').AsInteger]);'
        end>
      Sessions = <>
    end
    item
      Name = 'products'
      Pipeline = 'product-pipeline'      
      Columns = <      
        item
          Align = altRight
          Name = 'id'          
          Complete = '0'
          Size = 10          
        end
        item
          Name = 'name'          
          Size = 25          
        end>
      Sessions = <>
    end>
  Dictionaries = <  
    item
      Name = 'money'      
      Align = altRight
      Complete = '0'
      Expression = 'Result := RemoveMask(FormatFloat(''#.00'', Value));'
      Size = 8     
    end
    item
      Name = 'boolean'      
      Align = altRight     
      Expression = 'if (Value = 1) then Result := ''Yes'' else Result := ''No'';'
      Size = 3
    end>  
  Events = <    
    item
      Name = 'procedure BeforeExecute'
      Expression = 'ExecSQL(''update persons set firstName = :name where id = :id'', [''Christopher'', 1]);'
    end
    item
      Name = 'procedure AfterExecute'
      Expression = 'ExecSQL(''update persons set firstName = :name where id = :id'', [''Administrator'', 1]);'
    end>
  SerializerClassName = 'TexColumnSerializer'   
  Packages = <    
    item
      Name = 'persons.txt'
      Sessions.Strings = (
        'persons'          
      )
    end
    item
      Name = 'products.txt'
      Sessions.Strings = (
        'products'          
      )
    end> 
  Pipelines = <
    item
      Name = 'person-pipeline'
      SQL.Strings = (
	      'select * from persons'
	    )
    end
    item
      Name = 'product-pipeline'
      SQL.Strings = (
	      'select * from products'
	    )
    end> 
end